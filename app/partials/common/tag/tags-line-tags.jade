<% _.each(tags, function(tag) { %>
span.tag(style!="border-left: 5px solid <%- tag.color %>;")
    span.tag-name <%- tag.name %>
    <% if (isEditable) { %>
    a.remove-tag(
        href=""
        title="{{'COMMON.TAGS.DELETE' | translate}}"
    )
        tg-svg(svg-icon="icon-close")
    <% } %>
<% }); %>
div(tg-loading!="<%- loading %>")
